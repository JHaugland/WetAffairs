<Window x:Class="NWmanager.MapVisulizer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MapVisulizer" Height="600" Width="600" KeyDown="Window_KeyDown_1">
    <Grid>
            <Canvas x:Name="backgr" Background="Navy" Height="512"  Width="512" Margin="0,0,-22,-38" Grid.RowSpan="2">
            <Image x:Name="bgImage1" Source="imgGfx/mt0_0z1.png" Canvas.Left="0" Canvas.Top="0" />
            <Image x:Name="bgImage2" Source="imgGfx/mt0_1z1.png" Canvas.Left="0" Canvas.Top="256"/>
            <Image x:Name="bgImage3" Source="imgGfx/mt1_0z1.png" Canvas.Left="256"/>
            <Image x:Name="bgImage4" Source="imgGfx/mt1_1z1.png" Canvas.Left="256" Canvas.Top="256"/>
            <Image x:Name="mainShip" Source="imgGfx/M.png" 
                    Height="10" Width="10"/>
            <Image x:Name="folowingShip" Source="imgGfx/F.png"
                   Height="10" Width="10"/>
            <Image x:Name="folowingShip2" Source="imgGfx/F.png"
                   Height="10" Width="10"/>
            <Image x:Name="CenterMarker" Source="imgGfx/F.png"
                   Height="10" Width="10"/>
        </Canvas>
    </Grid>
</Window>
